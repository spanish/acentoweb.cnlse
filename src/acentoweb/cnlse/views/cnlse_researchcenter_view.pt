<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="acentoweb.cnlse"
      metal:use-macro="context/main_template/macros/master">
<body>
  <metal:block fill-slot="content-core">
<!--
     <figure tal:define="scale_func context/@@images;
                scale context/@@images;
                scaled_image python:scale_func.scale('image', scale='preview')"
                tal:on-error=""
                class="cnlse_researchcenter_image">
            <img tal:replace="structure python:scaled_image.tag()"
                 tal:condition="scaled_image" />
             <figcaption class="padding-10-0" tal:condition="context/image_caption|nothing"
                 tal:content="context/image_caption">
             </figcaption>
      </figure>
-->

      <div tal:replace="structure context/text/output|None" />


      <tal:check tal:condition="context/territories|None">
          <h4 i18n:translate="">Territories</h4>
          <ul>
            <li tal:repeat="territory context/territories" i18n:translate="">
                ${territory}
            </li>
          </ul>
      </tal:check>
      <!-- alternatively, use this line -->
      <!--span tal:replace="structure view/widgets/territories/render" i18n:translate="" /-->

      <p tal:condition="context/tax1|None">
        <span i18n:translate="">Places:</span> <span tal:replace="structure view/widgets/tax1/render" i18n:translate="" />
      </p>

      <tal:check tal:condition="context/tax2|None">
          <h4 i18n:translate="">Tax 2</h4>
          <span tal:replace="structure view/widgets/tax2/render" i18n:translate="" />
      </tal:check>

      <tal:check tal:condition="context/tax3|None">
          <h4 i18n:translate="">Tax 3</h4>
          <span tal:replace="structure view/widgets/tax3/render" i18n:translate="" />
      </tal:check>


      <!-- move this CSS code to 'Custom CSS' or you own theme -->
      <!-- note: color: white is to hide the ',' -->
      <style>
        #form-widgets-tax3 { color: rgba(255,255,255,0);}
        #form-widgets-tax3 span { color: #777; padding: 3px 8px; border-radius: 2px; border: 1px solid silver; font-size: 90%}
      </style>

      <div tal:condition="context/mail">
        Correo: <a href="mailto:${context/mail}">${context/mail}</a>
      </div>

      <div tal:condition="context/web|None">
        Web: <a href="${context/web}">${context/web}</a>
      </div>

      <tal:check tal:condition="view/get_relatedresearchers|None">
        <h2 i18n:translate="">Researchers</h2>
          <tal:repeat tal:repeat="ref view/get_relatedresearchers">
          <tal:define tal:define="ref_obj nocall:ref">
            <h3>
              <a href="${ref_obj/getURL|ref_obj/absolute_url}" class="margin-0 padding-0">
                ${ref_obj/Title|None}
              </a>
            </h3>
          </tal:define>
          </tal:repeat>
        </tal:check>

      <tal:check tal:condition="view/get_relatedlibraries|None">
        <h2 i18n:translate="">Libraries</h2>
          <tal:repeat tal:repeat="ref view/get_relatedlibraries">
          <tal:define tal:define="ref_obj nocall:ref">
            <h3>
              <a href="${ref_obj/getURL|ref_obj/absolute_url}" class="margin-0 padding-0">
                ${ref_obj/Title|None}
              </a>
            </h3>
          </tal:define>
          </tal:repeat>
        </tal:check>

  </metal:block>
</body>
</html>
